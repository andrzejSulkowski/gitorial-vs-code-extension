// A launch configuration that compiles the extension and then opens it inside a new window
// Use IntelliSense to learn about possible attributes.
// Hover to view descriptions of existing attributes.
// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Run Extension",
			"type": "extensionHost",
			"request": "launch",
			"args": [
				"--extensionDevelopmentPath=${workspaceFolder}"
			],
			"outFiles": [
				"${workspaceFolder}/out/**/*.js"
			],
			"preLaunchTask": "${defaultBuildTask}"
		},
		{
			"name": "Debug Gitorial-Sync Integration Tests",
			"type": "node",
			"request": "launch",
			"program": "${workspaceFolder}/packages/gitorial-sync/node_modules/mocha/bin/mocha.js",
			"args": [
				"--config",
				".mocharc.integration.json"
			],
			"cwd": "${workspaceFolder}/packages/gitorial-sync",
			"runtimeArgs": ["--inspect-brk"],
			"sourceMaps": true,
			"console": "integratedTerminal",
			"internalConsoleOptions": "neverOpen",
			"env": {
				"NODE_ENV": "test"
			}
		},
		{
			"name": "Debug Gitorial-Sync Module Tests",
			"type": "node",
			"request": "launch",
			"program": "${workspaceFolder}/packages/gitorial-sync/node_modules/mocha/bin/mocha.js",
			"args": [
				"--config",
				".mocharc.modules.json"
			],
			"cwd": "${workspaceFolder}/packages/gitorial-sync",
			"runtimeArgs": ["--inspect-brk"],
			"sourceMaps": true,
			"console": "integratedTerminal",
			"internalConsoleOptions": "neverOpen",
			"env": {
				"NODE_ENV": "test"
			}
		},
		{
			"name": "Debug Single Integration Test",
			"type": "node",
			"request": "launch",
			"program": "${workspaceFolder}/packages/gitorial-sync/node_modules/mocha/bin/mocha.js",
			"args": [
				"--config",
				".mocharc.integration.json",
				"--grep",
				"should handle sync direction assignment"
			],
			"cwd": "${workspaceFolder}/packages/gitorial-sync",
			"runtimeArgs": ["--inspect-brk"],
			"sourceMaps": true,
			"console": "integratedTerminal",
			"internalConsoleOptions": "neverOpen",
			"env": {
				"NODE_ENV": "test"
			}
		},
		{
			"name": "Debug via pnpm test (Alternative)",
			"type": "node",
			"request": "launch",
			"runtimeExecutable": "pnpm",
			"runtimeArgs": [
				"run",
				"test:integration"
			],
			"cwd": "${workspaceFolder}/packages/gitorial-sync",
			"console": "integratedTerminal",
			"internalConsoleOptions": "neverOpen",
			"env": {
				"NODE_OPTIONS": "--inspect-brk"
			}
		}
	],
	"inputs": [
		{
			"id": "testName",
			"description": "Test name pattern to run",
			"default": "should handle sync direction assignment",
			"type": "promptString"
		}
	]
}
