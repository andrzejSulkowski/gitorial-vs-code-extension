{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "outDir": "out",
    "rootDir": ".",
    "lib": ["ES2022", "DOM"],
    "baseUrl": ".",
    "types": ["node", "mocha", "chai"],
    "composite": true,
    "skipLibCheck": false,
    "paths": {
      "@infra/*": ["./src/infrastructure/*"],
      "@domain/*": ["./src/domain/*"],
      "@ui/*": ["./src/ui/*"],
      "@utils/*": ["./src/utils/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "out", "example-tutorial", "**/*.md", "webview-ui/node_modules"]
}
