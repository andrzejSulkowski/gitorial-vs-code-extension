{
  "name": "gitorial",
  "displayName": "Gitorial",
  "description": "Interactive VS Code extension that guides you step-by-step through Git-based tutorials with inline explanations and easy navigation.",
  "version": "0.1.4",
  "preview": true,
  "private": true,
  "publisher": "AndrzejSulkowski",
  "icon": "images/gitorial-icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/andrzejSulkowski/gitorial-vs-code-plugin"
  },
  "type": "commonjs",
  "engines": {
    "vscode": "^1.87.0"
  },
  "categories": [
    "Education",
    "Other"
  ],
  "license": "MIT",
  "homepage": "https://github.com/andrzejSulkowski/gitorial-vs-code-plugin#readme",
  "bugs": {
    "url": "https://github.com/andrzejSulkowski/gitorial-vs-code-plugin/issues"
  },
  "keywords": [
    "git",
    "tutorial",
    "interactive",
    "learning",
    "education",
    "gitorial",
    "guide"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onUri"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "gitorial.cloneTutorial",
        "title": "Gitorial: Clone New Tutorial"
      },
      {
        "command": "gitorial.openTutorial",
        "title": "Gitorial: Open Tutorial"
      },
      {
        "command": "gitorial.signin",
        "title": "Gitorial: Sign In"
      }
    ],
    "uriHandler": [
      {
        "id": "gitorial-uri-handler",
        "label": "Gitorial URI Handler"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "npm run compile:webview && npm run compile:extension && npm run post-build",
    "compile:webview": "cd webview-ui && npm run build && cd ..",
    "compile:extension": "node ./esbuild.config.mjs",
    "post-build": "node scripts/post-build.js",
    "watch:extension": "node ./esbuild.config.mjs --watch",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "vscode:package": "vsce package",
    "test:unit:js": "mocha dist/test/unit",
    "test:unit": "mocha --require ts-node/register src/libs/**/*.test.ts"
  },
  "devDependencies": {
    "@types/chai": "^5.2.2",
    "@types/markdown-it": "^14.1.2",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/sinon": "^17.0.4",
    "@types/vscode": "^1.87.0",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "chai": "^5.2.0",
    "esbuild": "^0.25.3",
    "eslint": "^9.23.0",
    "mocha": "^11.2.2",
    "sinon": "^20.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "markdown-it": "^14.1.0",
    "simple-git": "^3.27.0"
  },
  "workspaces": [
    "webview-ui"
  ]
}
