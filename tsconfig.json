{
	"extends": "./tsconfig.base.json",
	"compilerOptions": {
		"outDir": "out",
		"rootDir": ".",
		"lib": ["ES2022", "DOM"],
		"baseUrl": ".",
		"types": ["node", "mocha", "chai"],
		"composite": true,
		"skipLibCheck": false,
		"paths": {
			"@infra/*": ["./src/infra/*"],
			"@domain/*": ["./src/domain/*"],
			"@ui/*": ["./src/ui/*"],
			"@shared/*": ["./src/shared/*"]
		}
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules",
		"out", 
		"example-tutorial",
		"**/*.md",
		"webview-ui/node_modules"
	]
}
