{
	"compilerOptions": {
		"module": "CommonJS",
		"target": "ES2022",
		"outDir": "out",
		"lib": [
			"ES2022",
			"DOM"
		],
		"sourceMap": true,
		"declarationMap": true,
		"rootDir": ".",
		"strict": true,
		"noFallthroughCasesInSwitch": true,
		"noUnusedParameters": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"skipLibCheck": false,
		"baseUrl": ".",
		"types": [
			"node",
			"mocha",
			"chai"
		],
		"preserveSymlinks": true,
		"composite": true
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules",
		"out",
		"example-tutorial",
		"**/*.md",
		"webview-ui/node_modules"
	]
}
